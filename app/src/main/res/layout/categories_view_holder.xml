<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rv_category_img"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/food"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_15sdp" />

    <TextView
        android:id="@+id/rv_text"
        style="@style/bold_font_family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Herbs"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="@+id/rv_category_img"
        app:layout_constraintStart_toStartOf="@+id/rv_category_img"
        app:layout_constraintTop_toBottomOf="@+id/rv_category_img" />


</androidx.constraintlayout.widget.ConstraintLayout>