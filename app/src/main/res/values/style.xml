<?xml version="1.0" encoding="utf-8"?>
<resources>


    // font family

    <style name="regular_font_family">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="bold_font_family">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    //header

    <style name="header">
        <item name="android:textAlignment">center</item>+
        <item name="android:textColor">@color/green_700</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    //Text Header

    <style name="text_header">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
    </style>
    //text view

    <style name="textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColorHint">@color/green_700</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    // Edittext

    <style name="edittext">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>

    //BACK ARROW

    <style name="back_arrow_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:layout_margin">@dimen/_16sdp</item>

    </style>

    //Button

    <style name="button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>


</resources>